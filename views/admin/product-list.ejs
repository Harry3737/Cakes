<%-include('partials/headeradmin') -%>
<%-include('partials/sidebar') -%>

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>Product List
                                    <small>Multikart Admin panel</small>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Physical</li>
                                <li class="breadcrumb-item active">Product List</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row products-admin ratio_asos">
                    <!--Loop Start work-->
                    <% product.forEach(function(product){ %>
                    <div class="col-xl-3 col-sm-6">
                        <div class="card">
                            <div class="card-body product-box">
                                <div class="img-wrapper">
                                    <div class="front">
                                        <a href="#"><img src="../assets/images/products/<%= product.img %>" class="img-fluid blur-up lazyload bg-img" alt=""></a>
                                        <div class="product-hover">
                                            <ul>
                                                <li>
                                                    <a href="/admin/products/<%= product._id %>/edit" class="btn" type="button" data-original-title="" title=""><i class="fas fa-pen"></i></a>
                                                </li>
                                                <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" style="display: inline;">
                                                    <li>
                                                        <button  class="btn" type="submit" data-original-title=""  title=""><i class="fas fa-trash"></i></button>
                                                    </li>
                                                </form>
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-detail">
                                    <div class="rating"><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i></div>
                                    <a href="#">
                                        <h6><%= product.title %></h6>
                                    </a>
                                    <h4><%= product.price %></h4>
                                    <ul class="color-variant">
                                        <li class="bg-light0"></li>
                                        <li class="bg-light1"></li>
                                        <li class="bg-light2"></li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>  
                  <% } ) %>               
                </div>
            </div>
            <!-- Container-fluid Ends-->

        </div>

        <%-include('partials/footeradmin') -%>